# ==============================================================
#   Base
# ==============================================================
TZ=Europe/Berlin

# ==============================================================
#   n8n Web
# ==============================================================
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678/

# ==============================================================
#   n8n Auth
# ==============================================================
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=neo
N8N_BASIC_AUTH_PASSWORD=change_me_now

# ==============================================================
#   Database: PostgreSQL
# ==============================================================
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8n
DB_POSTGRESDB_PASSWORD=change_me_pg

# ==============================================================
#   Security
#   (طولانی، تصادفی — بدون "=")
# ==============================================================
N8N_ENCRYPTION_KEY=CHANGE_ME

# ==============================================================
#   License (اختیاری — Enterprise)
# ==============================================================
N8N_LICENSE_KEY=

# ==============================================================
#   Diagnostics / Telemetry
# ==============================================================
N8N_DIAGNOSTICS_ENABLED=false

# ==============================================================
#   Proxy
#   رمز باید URL-encoded باشد
# ==============================================================
PROXY_PROTOCOL=http
PROXY_ADDRESS=proxy.example.com
PROXY_PORT=3128
PROXY_USERNAME=myuser
PROXY_PASSWORD_URLENC=P%40ss%3Aw%23rd

HTTP_PROXY_URL=${PROXY_PROTOCOL}://${PROXY_USERNAME}:${PROXY_PASSWORD_URLENC}@${PROXY_ADDRESS}:${PROXY_PORT}
HTTPS_PROXY_URL=${HTTP_PROXY_URL}

NO_PROXY=localhost,127.0.0.1,::1,*.local,host.docker.internal,docker.internal,n8n,postgres

# ==============================================================
#   Docker Compose
# ==============================================================
COMPOSE_PROJECT_NAME=n8n-stack
